<h2 class='col-md-4 col-md-offset-4'>Organization Sign In</h2>

<div class="row">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
  defaults: { wrapper_html: { class: 'form-group'},
              input_html: { class: 'form-control'} }) do |f| %>
    <div class="form-inputs col-md-4 col-md-offset-4">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean, input_html: { class: "checkbox"}, label: false,
          inline_label: 'Remember me' if devise_mapping.rememberable? %>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <%= render "devise/shared/links" %>
    </div>
    <div class="form-actions col-md-4 col-md-offset-4">
      <input type='submit' class='btn btn-success pull-right' value='Sign in' />
    </div>
  <% end %>
</div>
