<h2 class='col-md-4 col-md-offset-4'>Organization Sign Up</h2>

<div class='row'>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
  defaults: { wrapper_html: { class: 'form-group'},
              input_html: { class: 'form-control'} }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs col-md-4 col-md-offset-4">
      <%= f.input :organization_name, required: true, autofocus: true  %>
      <%= f.input :address, required: true %>
      <%= f.input :phone, required: true %>
      <%= f.input :website, required: false %>
      <%= f.input :contact_name, required: true %>
      <%= f.input :email, required: true %>
      <%= f.input :password, required: true %>
      <%= f.input :password_confirmation, required: true %>
    </div>
    <div class='col-md-4 col-md-offset-4'>
      <%= render "devise/shared/links" %>
    </div>
    <div class="form-actions col-md-4 col-md-offset-4">
      <input type='submit' class='btn btn-success pull-right' value='Sign Up' />
    </div>
  <% end %>
</div>
