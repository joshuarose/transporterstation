<h2 class='col-md-4 col-md-offset-4'>New Transport</h2>
<div class="row">
  <%= simple_form_for(@transport, url: transports_path) do |f| %>
    <div class="form-inputs col-md-4 col-md-offset-4">
      <%= f.input :run_date, required: true, as: :date %>
      <%= f.time_select :start_time, as: :time %>
    </div>
    <div class="form-actions col-md-4 col-md-offset-4">
      <input type='submit' class='btn btn-success pull-right' value='Create' />
    </div>
  <% end %>
</div>
