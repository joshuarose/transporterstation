<h2 class='col-md-4 col-md-offset-4'>Dog Listing, Woof</h2>
<%= link_to "Create", new_dog_url, class: "btn btn-success"%>
<table id='dog-table' class='table table-bordered table-striped'>
  <thead>
    <tr>
      <td>
        Name
      </td>
      <td>
        Weight
      </td>
      <td>
        Gender
      </td>
      <td>
        Age
      </td>
      <td>
        Breed
      </td>
      <td>
        Location
      </td>
    </tr>
  </thead>
  <% @dogs.each do |d| %>
  <tr>
    <td>
      <%= link_to d.name, dog_path(d.id) %>
    </td>
    <td>
      <%= d.weight %>
    </td>
    <td>
      <%= d.gender %>
    </td>
    <td>
      <%= d.age %>
    </td>
    <td>
      <%= d.breed %>
    </td>
    <td>
      <%= d.location %>
    </td>
  </tr>

  <% end  %>
</table>
