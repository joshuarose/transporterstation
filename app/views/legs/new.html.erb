<div class="row">
  <%= simple_form_for(@leg, url: legs_path(@leg),
  defaults: { wrapper_html: { class: 'form-group'},
              input_html: { class: 'form-control'} }) do |f| %>
    <div class="form-inputs col-md-4 col-md-offset-4">
      <%= f.input :description, required: true, autofocus: true %>
      <%= f.input :address, required: true %>
      <%= f.input :city, required: true%>
      <%= f.input :state, required: true %>
      <%= f.input :zip, required: true %>
    </div>
    <div class="form-actions col-md-4 col-md-offset-4">
      <input type='submit' class='btn btn-success pull-right' value='Create' />
    </div>
  <% end %>
</div>
