<div class="row">
  <div id="dog-carousel" class="carousel slide col-md-12" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#dog-carousel" data-slide-to="0" class="active"></li>
      <li data-target="#dog-carousel" data-slide-to="1"></li>
      <li data-target="#dog-carousel" data-slide-to="2"></li>
      <li data-target="#dog-carousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <%= image_tag 'step_1.jpg', class: "carousel-img col-md-offset-3" %>
        <div class="carousel-caption">
          <p>
            Rescues create a transport
          </p>
        </div>
      </div>
      <div class="item">
        <%= image_tag 'step_2.jpg', class: "carousel-img col-md-offset-3"  %>
        <div class="carousel-caption">
          Rescues add dogs
        </div>
      </div>
      <div class="item">
        <%= image_tag 'step_3.jpg', class: "carousel-img col-md-offset-3"  %>
        <div class="carousel-caption">
          Rescues add stops
        </div>
      </div>
      <div class="item">
        <%= image_tag 'step_4.jpg', class: "carousel-img col-md-offset-3"  %>
        <div class="carousel-caption">
          Volunteers sign-up for stops
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="well">
    <blockquote class="col-md-offset-3">
      "Saving one dog will not change the world...
       But surely, for that one dog
       the world will change forever"
    </blockquote>
  </div>
</div>
